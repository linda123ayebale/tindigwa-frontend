      "name": "Payment Recording",
      "item": [
        {
          "name": "1. Record Payment (Simple)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Payment recorded successfully\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('id');",
                  "    pm.expect(jsonData).to.have.property('paymentNumber');",
                  "    pm.expect(jsonData.paymentStatus).to.eql('RECORDED');",
                  "    ",
                  "    // Save payment ID for subsequent requests",
                  "    pm.collectionVariables.set('paymentId', jsonData.id);",
                  "});",
                  "",
                  "pm.test(\"Payment number is auto-generated\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.paymentNumber).to.match(/^PAY-/);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"loanId\": {{loanId}},\n  \"amountPaid\": 25000.0,\n  \"paymentMethod\": \"CASH\",\n  \"paymentDate\": \"2024-01-15\",\n  \"referenceNumber\": \"CASH-2024-001\",\n  \"notes\": \"Monthly installment payment\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/payments",
              "host": ["{{baseUrl}}"],
              "path": ["api", "payments"]
            },
            "description": "Record a basic payment"
          },
          "response": []
        },
        {
          "name": "2. Process Payment (Advanced)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Payment processed with calculations\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.success).to.eql(true);",
                  "    pm.expect(jsonData).to.have.property('payment');",
                  "    pm.expect(jsonData.payment).to.have.property('principalPaid');",
                  "    pm.expect(jsonData.payment).to.have.property('interestPaid');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"loanId\": {{loanId}},\n  \"amount\": 25000.0,\n  \"paymentMethod\": \"BANK_TRANSFER\",\n  \"paymentDate\": \"2024-01-15\",\n  \"referenceNumber\": \"TRF-2024-001\",\n  \"notes\": \"Monthly installment via bank transfer\",\n  \"createdBy\": 1\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/payments/process",
              "host": ["{{baseUrl}}"],
              "path": ["api", "payments", "process"]
            },
            "description": "Process payment with full calculation (principal, interest, fees)"
          },
