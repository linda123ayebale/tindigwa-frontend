{
  "info": {
    "name": "02 - Loans API",
    "description": "Complete API collection for Loans module - creates loans based on loan products and manages workflow (PENDING → APPROVED → DISBURSED → COMPLETED)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8081",
      "type": "string"
    },
    {
      "key": "loanId",
      "value": "",
      "type": "string"
    },
    {
      "key": "clientId",
      "value": "1",
      "type": "string"
    },
    {
      "key": "productId",
      "value": "1",
      "type": "string"
    },
    {
      "key": "loanOfficerId",
      "value": "1",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Loan Creation",
      "item": [
        {
          "name": "1. Create Loan Application",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Loan created successfully\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('id');",
                  "    pm.expect(jsonData).to.have.property('loanNumber');",
                  "    pm.expect(jsonData.workflowStatus).to.eql('PENDING_APPROVAL');",
                  "    ",
                  "    // Save loan ID for subsequent requests",
                  "    pm.collectionVariables.set('loanId', jsonData.id);",
                  "});",
                  "",
                  "pm.test(\"Loan number is auto-generated\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.loanNumber).to.match(/^LN-/);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"clientId\": {{clientId}},\n  \"productId\": {{productId}},\n  \"principalAmount\": 200000.0,\n  \"loanPurpose\": \"Business expansion\",\n  \"requestedAmount\": 200000.0,\n  \"loanDuration\": 12,\n  \"durationUnit\": \"MONTHS\",\n  \"repaymentFrequency\": \"MONTHLY\",\n  \"numberOfRepayments\": 12,\n  \"interestRate\": 15.5,\n  \"interestMethod\": \"REDUCING_BALANCE\",\n  \"processingFee\": 4000.0,\n  \"gracePeriodDays\": 3,\n  \"lateFee\": 500.0,\n  \"defaultFee\": 1000.0,\n  \"lendingBranch\": \"Main Branch\",\n  \"description\": \"Loan for expanding retail business\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/loans",
              "host": ["{{baseUrl}}"],
              "path": ["api", "loans"]
            },
            "description": "Create new loan application (status: PENDING_APPROVAL)"
          },
          "response": []
        }
      ]
    },
